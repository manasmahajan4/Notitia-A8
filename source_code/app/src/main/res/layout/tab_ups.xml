<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/max_pro_chunk"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/cost_m_row"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.9"
                    android:background="#99000000"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8c" />

                    <TextView
                        android:id="@+id/cost_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />
                </LinearLayout>

                <TextView
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="MAX" />
            </TableRow>


            <TableRow
                android:id="@+id/cost_mx_row"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.9"
                    android:background="#99000000"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8c" />

                    <TextView
                        android:id="@+id/cost_mc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8t" />

                    <TextView
                        android:id="@+id/cost_mt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />
                </LinearLayout>

                <TextView
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="MAX" />
            </TableRow>

            <TableRow
                android:id="@+id/cost_p_row"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.9"
                    android:background="#99000000"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8c" />

                    <TextView
                        android:id="@+id/cost_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="PRO" />
            </TableRow>

            <TableRow
                android:id="@+id/cost_px_row"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.9"
                    android:background="#99000000"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8c" />

                    <TextView
                        android:id="@+id/cost_pc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8t" />

                    <TextView
                        android:id="@+id/cost_pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />
                </LinearLayout>

                <TextView
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="PRO" />
            </TableRow>

            <TableRow
                android:id="@+id/cost_mp_row"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.8"
                    android:background="#99000000"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8c" />

                    <TextView
                        android:id="@+id/cost_mp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />
                </LinearLayout>

                <TextView
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="MAX+PRO" />
            </TableRow>

            <TableRow
                android:id="@+id/cost_mpx_row"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.8"
                    android:background="#99000000"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8c" />

                    <TextView
                        android:id="@+id/cost_mpc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/a8t" />

                    <TextView
                        android:id="@+id/cost_mpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\?" />
                </LinearLayout>

                <TextView
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="MAX+PRO" />
            </TableRow>

        </TableLayout>

        <include
            android:id="@+id/statsMAX"
            layout="@layout/table_pro_cards" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/maxButt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="MAX" />

            <Button
                android:id="@+id/proButt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="PRO" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>